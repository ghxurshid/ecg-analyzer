<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tutorials.android.mobileecg">
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

<application
        android:icon="@mipmap/heart"
        android:label="Smartfon ECG"
        android:roundIcon="@mipmap/heart"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity android:name="tutorials.android.mobileecg.Patient2" />
<!--        <activity android:name="tutorials.android.mobileecg.Patient1" />-->
        <activity
            android:name="tutorials.android.mobileecg.MainActivity"
            android:label="Smartphone ECG"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>